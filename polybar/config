;===========================================
;=============== Date Module ===============
;===========================================

[module/date]
type = internal/date
interval = 1.0

date = %d/%m/%Y
time = %H:%M

date-alt = %a, %d %B %Y
time-alt = %H:%M:%S

label = %date% %time%

